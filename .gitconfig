[user]
	name = bentona
	email = benton.anderson@gmail.com

[core]
	editor = vim

[push]
	default = current

[pull]
	default = current

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]

	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions

[color "status"]

	added = yellow
	changed = green
	untracked = cyan

[alias]
	co = checkout
	a = add
	st = status
	br = branch
	c = commit

